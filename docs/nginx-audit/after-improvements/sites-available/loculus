server {

    server_name db.wasap.genspectrum.org;

    location / {
        proxy_pass http://127.0.0.1:9000/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    listen 443 ssl http2; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/db.wasap.genspectrum.org/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/db.wasap.genspectrum.org/privkey.pem; # managed by Certbot
    include /etc/nginx/snippets/ssl-params.conf;
   
   location /static/ {
        alias /var/www/html/static/;
        expires 1y;
        add_header Cache-Control "public, immutable";
        try_files $uri $uri/ =404;
    }

}

server {

    server_name auth.db.wasap.genspectrum.org;

    location / {
        proxy_pass http://127.0.0.1:9083/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_buffer_size 16k;
        proxy_buffers 4 16k;
        proxy_busy_buffers_size 32k;
    }

    listen 443 ssl http2; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/db.wasap.genspectrum.org/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/db.wasap.genspectrum.org/privkey.pem; # managed by Certbot
    include /etc/nginx/snippets/ssl-params.conf;
}

server {

    server_name api.db.wasap.genspectrum.org;

    location /backend/ {
        proxy_pass http://127.0.0.1:9079/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
	proxy_set_header X-Forwarded-Prefix /backend/;
    }

    location / {
        proxy_pass http://127.0.0.1:9080/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    listen 443 ssl http2; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/db.wasap.genspectrum.org/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/db.wasap.genspectrum.org/privkey.pem; # managed by Certbot
    include /etc/nginx/snippets/ssl-params.conf;
}

server {
    if ($host = db.wasap.genspectrum.org) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;

    server_name db.wasap.genspectrum.org;
    return 404; # managed by Certbot


}

server {
    if ($host = api.db.wasap.genspectrum.org) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;

    server_name api.db.wasap.genspectrum.org;
    return 404; # managed by Certbot


}

server {
    if ($host = auth.db.wasap.genspectrum.org) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;

    server_name auth.db.wasap.genspectrum.org;
    return 404; # managed by Certbot


}

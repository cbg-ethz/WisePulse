server {
    listen 127.0.0.1:443 ssl;
    server_name monitoring.localhost;
    
    # Use existing SSL certificate
    ssl_certificate /etc/letsencrypt/live/wasap.genspectrum.org/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/wasap.genspectrum.org/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location /grafana/ {
        proxy_pass http://127.0.0.1:3000/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
    }
    # Optional: Prometheus interface (for debugging only)
    location /prometheus/ {
        proxy_pass http://127.0.0.1:9090/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
	proxy_set_header X-Forwarded-Proto https;
    }

}

global:
  scrape_interval: 15s
  evaluation_interval: 15s
  external_labels:
    monitor: 'wisepulse_monitor'

{% if alertmanager_enabled %}
alerting:
  alertmanagers:
    - static_configs:
        - targets:
          - alertmanager:9093
{% endif %}

rule_files:
  - "rules/*.yml"

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:{{ prometheus_port }}']

  - job_name: 'node'
    static_configs:
      - targets: ['{{ node_exporter_listen_address | default("127.0.0.1") }}:{{ node_exporter_port }}']

  - job_name: 'grafana'
    static_configs:
      - targets: ['localhost:{{ grafana_port }}']
        labels:
          instance: 'wisepulse_grafana'
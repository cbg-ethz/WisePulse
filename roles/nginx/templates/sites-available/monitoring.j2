server {
    listen 127.0.0.1:443 ssl;
    server_name monitoring.localhost;
    
    # Use existing SSL certificate
    ssl_certificate /etc/letsencrypt/live/wasap.genspectrum.org/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/wasap.genspectrum.org/privkey.pem;
    include /etc/nginx/snippets/ssl-params.conf;

    location /grafana/ {
        proxy_pass http://127.0.0.1:{{ nginx_grafana_port }}/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
    }
    # Optional: Prometheus interface (for debugging only)
    location /prometheus/ {
        proxy_pass http://127.0.0.1:{{ nginx_prometheus_port }}/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
	proxy_set_header X-Forwarded-Proto https;
    }

}

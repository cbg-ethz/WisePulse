# Global proxy settings
proxy_http_version 1.1;

# Upstream definitions for backend services
upstream lapis-wasap {
    server 127.0.0.1:{{ nginx_lapis_port }};
}

upstream silo-wasap {
    server 127.0.0.1:{{ nginx_silo_port }};
}

# Default HTTP to HTTPS redirect
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    location / {
        return 301 https://$host$request_uri;
    }
}

apiVersion: 1

providers:
  - name: 'wisepulse_dashboards'
    orgId: 1
    folder: 'WisePulse Monitoring'
    folderUid: 'wisepulse_monitoring'
    type: file
    disableDeletion: false
    updateIntervalSeconds: 10
    allowUiUpdates: true
    options:
      path: /var/lib/grafana/dashboards
  
  # Auto-import Node Exporter Full dashboard from Grafana.com
  - name: 'grafana_dashboards'
    orgId: 1
    folder: 'System'
    folderUid: 'system_monitoring'
    type: file
    disableDeletion: false
    updateIntervalSeconds: 30
    allowUiUpdates: true
    options:
      path: /var/lib/grafana/dashboards/grafana